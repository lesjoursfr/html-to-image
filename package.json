{
	"name": "@lesjoursfr/html-to-image",
	"version": "1.0.4",
	"description": "A library to generate images from HTML.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-image",
	"homepage": "https://github.com/lesjoursfr/html-to-image#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-image/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x || 24.x"
	},
	"keywords": [
		"image",
		"generator",
		"html"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc && cp src/electron.js lib/electron.js",
		"test": "mocha"
	},
	"dependencies": {
		"electron": "^33.2.1",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@tsconfig/node20": "^20.1.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.10.2",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"mocha": "^11.0.1",
		"prettier": "^3.4.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2"
	},
	"packageManager": "yarn@4.6.0"
}
